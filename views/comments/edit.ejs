<% include ../partials/header%>

<div class="container">
    <h3 style="text-align:center"> Edit Comment</h3>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form  action="/campgrounds/<%=campground_id%>/comments/<%=Comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value=<%=Comment.title%> name="Comments[title]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>
            </form>
            <a href="/campgrounds/<%=campground_id%>" >Go Back</a>
        </div>
    </div>    
</div>    
