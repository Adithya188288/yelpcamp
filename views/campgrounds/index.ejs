<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
    <div class="container">
        <h1>Welcome to YelpCamp</h1> 
        <p>View Our Hand-Picked Campgrounds all over the world</p>
        <p>
        <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a>
        </p>
    </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds.image %> " >
                    <div class="caption">
                        <h3> <%= campgrounds.name  %> </h3>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campgrounds._id%>" >More Info</a>
                    </p>
                </div>    
            </div>
        <% }); %>
    </div>
    <a href="/">Go Back</a>
</div>

<% include ../partials/footer %>